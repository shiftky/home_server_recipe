{
  "client": {
    "name": "<%= node['hostname'] %>",
    "address": "<%= node['ipaddress'] %>",
    "subscriptions": [<%= node['sensu']['subscriptions'].map { |s| "\"#{s}\"" }.join(', ') %>],
    "tags": {
      "hostname": "<%= node[:hostname]%>"
    },
    "keepalive": {
      "thresholds": {
        "warning": 60,
        "critical": 60
      },
      "handlers": [
        "mailer",
        "slack"
      ],
      "interval": 20,
      "occurrences": 3,
      "refresh": 300
    }
  }
}
